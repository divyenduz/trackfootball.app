{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "ignoreBinaries": ["pg_dump"],
  "workspaces": {
    ".": {
      "entry": ["scripts/**/*.{sh,cjs,mjs,js}"],
      "ignoreDependencies": ["prettier", "wrangler"]
    },
    "packages/rw-app": {
      "entry": ["src/worker.tsx", "src/client.tsx", "vite.config.mts"],
      "project": ["src/**/*.{ts,tsx}"],
      "ignore": ["**/*.d.ts", "better-auth_migrations/**"],
      "ignoreDependencies": ["cloudflare", "tailwindcss"],
      "vite": false
    },
    "packages/service": {
      "project": ["**/*.ts"],
      "ignore": ["**/*.d.ts"]
    },
    "packages/postgres": {
      "project": ["**/*.ts"],
      "ignore": ["**/*.d.ts"]
    },
    "packages/cli": {
      "project": ["src/**/*.ts"],
      "ignore": ["**/*.d.ts"]
    },
    "packages/open-api": {
      "entry": ["kubb.config.ts"],
      "project": ["**/*.ts"],
      "ignore": ["**/*.d.ts", "services/**/generated/**"]
    }
  }
}
